[32m+[m[32mpublic class BaogangSpout extends BaseRichSpout {[m
[32m+[m
[32m+[m[32m优先级队列 job = getFirstTaskO;[m
[32m+[m
[32m+[m[32m任务 task = getTaskMap(job);[m
[32m+[m
[32m+[m[32mJSONObject json = JSONObject.fonnat(task);[m
[32m+[m
[32m+[m[32m//发送任务[m
[32m+[m
[32m+[m[32mspoutCollector.eniit(new Values(j son));[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m任务分发控制组件,该组件未storm框架的数据入口类,所有的处理任务都[m
[32m+[m
[32m+[m[32m是通过该组件即spout组件从外部数据库或其他数据源读取,分发到后续各个[m
[32m+[m
[32m+[m[32m处理组件中。在本釆集系统中,spout组件主要提供任务数据读入,同时控制任[m
[32m+[m
[32m+[m[32m务分发的逻辑和频率。[m
[32m+[m
[32m+[m[32m2、采集组件[m
[32m+[m
[32m+[m[32m系统釆用javahttpClient采集网页数据,根据链接地址获取网页源码,期间[m
[32m+[m
[32m+[m[32m要解决失败重抓,IP封锁,编码转换,源码格式化等问题。失败重抓为保证数[m
[32m+[m
[32m+[m[32m39[m
[32m+[m	[32m基于网络爬虫的信息采集分类系统设计与实现[m
[32m+[m[41m	[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m[32m据尽可能完整正确,ip封锁解决服务端拒绝数据采集,编码转换是保证数据正[m
[32m+[m
[32m+[m[32m确有效,源码格式化利于数据的统一抽取。各阶段不可或缺的组成的采集组件[m
[32m+[m
[32m+[m[32m的核心内容。[m
[32m+[m
[32m+[m[32m业务逻辑:采集组件在接到上游组件的任务后,组装必要的参数控制,如[m
[32m+[m
[32m+[m[32m页数累计,链接格式化等,然后通过标准格式化处理过的链接地址,调用[m
[32m+[m
[32m+[m[32mhttpdient获取该网页的源码,抽取出该源码的编码规则,若符合系统统一编码,[m
[32m+[m
[32m+[m[32m则不作处理,否则转换为统一编码规范,之后将编码正确的网页源码进行标准[m
[32m+[m
[32m+[m[32m格式化:补充丢失的标签,过滤javascript等脚本语言,以及ess等,最后将处[m
[32m+[m
[32m+[m[32m理好的网页源码交由下一组件(数据抽取组件)进一步处理。图5-2为业务逻[m
[32m+[m
[32m+[m[32m辑图。[m
[32m+[m
[32m+[m[32m彳壬务!据处^米%:,码[m
[32m+[m
[32m+[m[32m图5-2采集组件业务逻辑图[m
[32m+[m
[32m+[m[32m相关逻辑代码:[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m
[32m+[m[32m*带adsl重拨抓取组件[m
[32m+[m
[32m+[m[32m*/[m
[32m+[m
[32m+[m[32mpublic class CrawlerAdsl extends CrawlerBase {[m
[32m+[m
[32m+[m[32mpublic html crawlerByAdsl(){[m
[32m+[m
[32m+[m[32mString html = crawler(task);// 釆集[m
[32m+[m
[32m+[m[32mwhile(html 封锁页面&&size<10){[m
[32m+[m
[32m+[m[32m重拨IP;[m
[32m+[m
[32m+[m[32mhtml = crawler(task);[m
[32m+[m
[32m+[m[32mSize++;[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mReturn html;[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m40[m
[32m+[m	[32m第五章系统实现[m
[32m+[m[41m	[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m应对IP封锁的抓取控制类,该类有抓取控制参数,以及一个主处理方法完[m
[32m+[m
[32m+[m[32m成数据抓取,当出现ip封锁的情况下,可通知第三放服务(adsl池服务)做线[m
[32m+[m
[32m+[m[32m路切换和重拨等。保证数据采集的同时,避免被IP封锁的情况下数据无法获取,[m
[32m+[m
[32m+[m[32m导致相关数据缺失。[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m
[32m+[m[32m*抓取客户端[m
[32m+[m	[32m.[m
[32m+[m
[32m+[m[32m*/[m
[32m+[m
[32m+[m[32mpublic class My Client {[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mhttpClient抓取网页的核心类,该类类似于一个微型浏览器,传入连接地址,[m
[32m+[m
[32m+[m[32m返回地址下的网页源码。主要处理httpclient浏览器标准,访问超时,压缩编码[m
[32m+[m
[32m+[m[32m规范等参数,其中上面的代码及处理压缩编码的网页源码,即将与本系统不一[m
[32m+[m
[32m+[m[32m致的编码转换为统一编码规范。[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m
[32m+[m[32m* 文档 crawlerBotl[m
[32m+[m
[32m+[m[32m*/[m
[32m+[m
[32m+[m[32mPublic class BaogangDocumentCrawlerBolt extends BaseRichBolt{[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m该组件为storm中的任务处理组件Bolt,由于数据抽取与抓取紧密连接,所[m
[32m+[m
[32m+[m[32m以在本组件除包含抓取的业务逻辑调用外,还包含了数据抽取的业务调用。在[m
[32m+[m
[32m+[m[32m完成数据抓取之后,组件中直接调用数据抽取工具类,抽取的结果数据发送给[m
[32m+[m
[32m+[m[32m后续的数据存储组件,产生新的抓取任务,发送给本组件处理或者后续任务处[m
[32m+[m
[32m+[m[32m理组件。[m
[32m+[m
[32m+[m[32m3、数据抽取组件[m
[32m+[m
[32m+[m[32m基于硬件资源的考虑,在没有大集群的环境下,过多的无用数据,只会导[m
[32m+[m
[32m+[m[32m致浪费太多的存储空间,为止,我们要将釆集后的数据做一定的抽取,只提取[m
[32m+[m
[32m+[m[32m有价值的信息,一方面可以减少数据存储量,另一方面,对数据有一个标准化[m
[32m+[m
[32m+[m[32m的存储,方面后续的数据分析。[m
[32m+[m
[32m+[m[32m41[m
[32m+[m	[32m棊于网络爬虫的信息釆集分类系统设计与实现[m
[32m+[m[41m	[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m[32m业务逻辑:抽取组件主要利用 源简易公式为桥梁,将散乱的结果数据根[m
[32m+[m
[32m+[m[32m据公式规则,转化为标准的结果数据。简易公式中有一个数据容器,将分页信[m
[32m+[m
[32m+[m[32m息,翻页信息,源码信息,任务信息等全部添加到数据容器中,公式中的函数[m
[32m+[m
[32m+[m[32m通过相应的变量,定位目标数据,进行数据抽取和组装,所以这里需要一个配[m
[32m+[m
[32m+[m[32m置数据抽取规则的模板,通过该模板可以很灵活的进行数据抽取。图5-3为业[m
[32m+[m
[32m+[m[32m务逻辑图。[m
[32m+[m
[32m+[m[32m(""采集结果"^[^>扣乂漂入数	,	—[m
[32m+[m[32mA]	数据抽取,—I .结￡|^[m
[32m+[m[32mz-—、[m
[32m+[m		[32m组装结果匸^, V 果[m
[32m+[m
[32m+[m[32m集任务取兵取校板[m
[32m+[m
[32m+[m[32m图5-3数据抽取业务逻辑图[m
[32m+[m
[32m+[m[32m相关代码:[m
[32m+[m
[32m+[m[32m/* *[m
[32m+[m
[32m+[m[32m*解析主处理[m
[32m+[m
[32m+[m[32m*	@param pageType[m
[32m+[m
