[32m+[m[32mjava.io.StringReader reader 二 nev/java.io.StringReader(doc.asXML());[m
[32m+[m
[32m+[m[32morg.xml.sax.InputSource source = new org.xml.sax.InputSource(reader);[m
[32m+[m
[32m+[m[32mjavax.xml.parsers.DocumentBuilderFactory dbf =[m
[32m+[m
