[32m+[m[32minfoContent,发布时间 infoDate,作者 info Author。[m
[32m+[m
[32m+[m[32m2、创建文档索引[m
[32m+[m
[32m+[m[32m构建文档索引,这是文档检索中必不可少的一个步骤,主要利用lucene及[m
[32m+[m
[32m+[m[32m中文分词器IK,将文档内容进行中文切词,对切词后的每个词语在文档中出现[m
[32m+[m
[32m+[m[32m的位序进行倒排索引的创建,使页面在搜索框搜索的词语快速定位到相关。[m
[32m+[m
[32m+[m[32m48[m
[32m+[m	[32m第五章系统实现[m
[32m+[m[41m	[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m[32m业务逻辑:读取文档信息,对文档信息中各个字段做倒排索引,根据不同[m
[32m+[m
[32m+[m[32m的字段查询需求判断是否同时将字段信息存入倒排索引文件库中。完成倒排索[m
[32m+[m
[32m+[m[32m引创建后将其持久化更新到索引文件库中。图5-6为文档索引业务逻辑图。[m
[32m+[m
[32m+[m[32mIK分词[m
[32m+[m	[32m构述倒排索引 Cllizj〉 保存索iJI[m
[32m+[m
[32m+[m[32m图5-6文挡索引业务逻辑图[m
[32m+[m
[32m+[m[32m相关代码:[m
[32m+[m
[32m+[m[32m/**[m
[32m+[m
[32m+[m[32m*创建倒排索引[m
[32m+[m
[32m+[m[32m*/[m
[32m+[m
[32m+[m[32mprivate void addDocToIndex(JSONObject docInfo){[m
[32m+[m
[32m+[m[32mdocument.add(new Field("title", doc.getString("titIe"), Field.Store.NO,[m
[32m+[m
[32m+[m[32mField.Index.NOT—ANALYZED—NO—NORMS));[m
[32m+[m
[32m+[m[32mdocument.adcl(new Field("content", doc.getString("content"), Field.Store.NO,[m
[32m+[m
[32m+[m[32mField. Index.NOT_ANALYZED_NO_NORMS));[m
[32m+[m
[32m+[m[32m//以下添加或更新索引[m
[32m+[m
[32m+[m[32mtry {[m
[32m+[m
[32m+[m[32mIndex Writer index Writer = getlndexWriterQ ;[m
[32m+[m
[32m+[m[32mif(row.equa]s("") || rowKey.equals(""))[m
[32m+[m
[32m+[m[32mindex Writer.addDocument(document);[m
[32m+[m
[32m+[m[32melse[m
[32m+[m
[32m+[m[32mindex Writer. updateDocument(new Term(rowKey, row), document);[m
[32m+[m
[32m+[m[32mhitCounts[index] ++;[m
[32m+[m
[32m+[m[32m} catch (CorruptlndexException e) {[m
[32m+[m
[32m+[m[32mlogger[index].log(Level. WARNING, ”添加或更新 documnet 到 index Writer[m
[32m+[m
[32m+[m[32m出错:”+e.getMessage());[m
[32m+[m
[32m+[m[32m} catch (lOException e) {[m
[32m+[m
[32m+[m[32m49[m
[32m+[m	[32m基于网络爬虫的信息采集分类系统设计与实现[m
[32m+[m[41m	[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m
[32m+[m[32mlogger[index].log(Level.WARNING,``添加或更新 documnet 到 indexWriter[m
[32m+[m
[32m+[m[32m出错:"+e.getM[essage());[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m该方法实现对文档各字段的倒排索引创建,对文档建立倒排索引,方面前[m
[32m+[m
[32m+[m[32m台页面搜索时快速定位到文档位置。[m
[32m+[m
[32m+[m[32m*从oracle tr—word_dict中加载扩展词典[m
[32m+[m
[32m+[m[32m*	@throws SQLException[m
[32m+[m
[32m+[m[32m*	@throws Exception[m
[32m+[m
[32m+[m[32m*/[m
[32m+[m
[32m+[m[32m在实际业务中,由于业务的独特性,自带分词字典可能无法满足准确的分[m
[32m+[m
[32m+[m[32m词要求,该方法提供扩展分词的加载,满足特定需求下的分词准确性。[m
