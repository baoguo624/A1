[32m+[m
[32m+[m[32mpublic static Document parseDom(String s) throws[m
[32m+[m
[32m+[m[32mParserConfigurationException, SAXException, lOException {[m
[32m+[m
[32m+[m[32morg.dom4j .Document doc = null;[m
[32m+[m
[32m+[m[32mtry {[m
[32m+[m
[32m+[m[32mdoc = DocumentHelper.parseText(s);[m
[32m+[m
[32m+[m[32m} catch (DocumentException e) {[m
[32m+[m
[32m+[m[32me.printStackTraceQ;[m
[32m+[m
[32m+[m[32m43[m
[32m+[m	[32m基于网络爬虫的信息釆集分类系统设计与实现[m
[32m+[m[41m	[m
