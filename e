[32m+[m[32mpublic static Map<String, String〉getFirstTask(String pool) {[m
[32m+[m
[32m+[m[32m查询队列jobs;[m
[32m+[m
[32m+[m[32mfor (String job : jobs) {[m
[32m+[m
[32m+[m[32m查询队列详情joblnfo ;[m
[32m+[m
[32m+[m[32mint value = joblnfo.get(优先级)[m
[32m+[m
[32m+[m[32mif (value > max) {[m
[32m+[m
[32m+[m[32mret 二 joblnfo;[m
[32m+[m
[32m+[m[32mmax = value;[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32m};[m
[32m+[m
[32m+[m[32mreturn ret;[m
[32m+[m
[32m+[m[32m}[m
[32m+[m
[32m+[m[32mpool参数定位redis数据库实例,运行队列中可能已经发送了很多个需要处[m
[32m+[m
[32m+[m[32m理的任务队列信息,该接口是根据各个队列配置的优先级,选择需要优先处理[m
[32m+[m
[32m+[m[32m的队列出来,该逻辑保证队列运行的先后顺序,配置中,可把热点数据置于高[m
[32m+[m
[32m+[m[32m优先级任务队列中。[m
[32m+[m
[32m+[m[32m38[m
[32m+[m	[32m第五章系统实现[m
[32m+[m[41m	[m
[32m+[m
